{
  "name": "wareneingang-rfid-qr",
  "version": "1.0.0",
  "description": "RFID Wareneingang System - Vereinfachte Desktop-Anwendung fÃ¼r Shirtful",
  "main": "main.js",
  "author": {
    "name": "Shirtful GmbH",
    "email": "support@shirtful.com",
    "url": "https://www.shirtful.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production FORCE_COLOR=1 electron .",
    "dev": "cross-env NODE_ENV=development FORCE_COLOR=1 electron .",
    "debug": "cross-env NODE_ENV=development DEBUG=true FORCE_COLOR=1 electron . --inspect=9229",
    "test": "node test.js",
    "test-quick": "node scripts/quick-test.js",
    "setup": "node setup.js",
    "setup-db": "node scripts/create-database.js",
    "setup-users": "node scripts/create-test-users.js",
    "test-db": "node scripts/test-db-connection.js",
    "clean": "rimraf dist node_modules/.cache",
    "rebuild-safe": "electron-rebuild --force --only node-hid || echo 'Native module rebuild failed - app will work without RFID hardware'",
    "install-rebuild": "npm install && npm run rebuild-safe",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mssql": "^10.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.1"
  },
  "build": {
    "appId": "com.shirtful.wareneingang-rfid-qr",
    "productName": "Wareneingang RFID QR",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "rfid/**/*",
      "db/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": ".env.example",
        "to": ".env.example",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Wareneingang RFID QR",
      "language": "1031",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "menuCategory": "Shirtful",
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/uninstaller.ico",
      "include": "build/installer-script.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  },
  "keywords": [
    "rfid",
    "qr-code",
    "wareneingang",
    "shirtful",
    "electron",
    "desktop",
    "warehouse",
    "scanning"
  ]
}